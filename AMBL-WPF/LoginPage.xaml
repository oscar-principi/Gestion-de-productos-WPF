<Page x:Class="AMBL_WPF.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login">

    <Grid>

        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#805151E5" Offset="0.0"/>
                    <GradientStop Color="#FF5151E5" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>





        <Border Background="White" 
                CornerRadius="25" 
                Width="400" 
                Padding="10"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center">

            <Border.Effect>
                <DropShadowEffect Color="{StaticResource PrimaryColorValue}" 
                                  BlurRadius="15" 
                                  Opacity="0.4" 
                                  ShadowDepth="0"/>
            </Border.Effect>

            <StackPanel Margin="40,35">
                <Border Width="70" Height="70" 
                        Background="{StaticResource PrimaryColor}" 
                        CornerRadius="35" 
                        Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="{StaticResource PrimaryColorValue}" 
                                          BlurRadius="15" 
                                          Opacity="0.4" 
                                          ShadowDepth="0"/>
                    </Border.Effect>
                    <TextBlock Text="👤" Foreground="White" FontSize="30" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <TextBlock Text="¡Bienvenido!" 
                           FontSize="32" 
                           FontWeight="Black" 
                           HorizontalAlignment="Center" 
                           Foreground="{StaticResource SidebarColor}"/>

                <TextBlock Text="Accede al sistema de gestión" 
                           Foreground="Gray" 
                           FontSize="14"
                           HorizontalAlignment="Center" 
                           Margin="0,8,0,35"/>

                <TextBlock Text="Usuario" FontSize="13" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUser" Margin="0,0,0,25"/>

                <TextBlock Text="Contraseña" FontSize="13" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPass" Margin="0,0,0,10"/>

                <TextBlock Text="¿Olvidaste tu contraseña?" FontSize="11" Foreground="{StaticResource PrimaryColor}" 
                           HorizontalAlignment="Right" Cursor="Hand" Margin="0,0,0,25"/>

                <Button Content="Ingresar al Panel" 
                        Style="{StaticResource ModernButton}" 
                        Height="50" 
                        FontSize="16"
                        Click="Login_Click"/>

                <Button Content="Crear una cuenta nueva" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Foreground="Gray" 
                        Margin="0,20,0,0"
                        Cursor="Hand" 
                        Click="IrRegistro_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>