<Page x:Class="AMBL_WPF.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Registro"
      Background="Transparent">

    <Grid>
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#805151E5" Offset="0.0"/>
                    <GradientStop Color="#FF5151E5" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>


        <!-- Card -->
        <Border Background="White"
                Width="420"
                CornerRadius="25"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="20">

            <Border.Effect>
                <DropShadowEffect Color="{StaticResource PrimaryColorValue}"
                                  BlurRadius="15"
                                  Opacity="0.4"
                                  ShadowDepth="0"/>
            </Border.Effect>

            <StackPanel Margin="40,30">

                <!-- Volver -->
                <Button Background="Transparent"
                        BorderThickness="0"
                        Foreground="Gray"
                        Cursor="Hand"
                        FontSize="13"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,25"
                        Click="Back_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="←"
                                   FontWeight="Bold"
                                   Margin="0,0,5,0"/>
                        <TextBlock Text="Volver al inicio de sesión"/>
                    </StackPanel>
                </Button>

                <!-- Título -->
                <TextBlock Text="Crear Cuenta"
                           FontSize="30"
                           FontWeight="Black"
                           Foreground="{StaticResource SidebarColor}"/>

                <TextBlock Text="Únete a AMBL para gestionar tu stock."
                           FontSize="14"
                           Foreground="Gray"
                           Margin="0,5,0,30"/>

                <!-- Usuario -->
                <TextBlock Text="Nombre de Usuario"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="#666"/>
                <TextBox x:Name="txtUsername"
                         Height="38"
                         Margin="0,0,0,18"/>

                <!-- Email -->
                <TextBlock Text="Correo Electrónico"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="#666"/>
                <TextBox x:Name="txtEmail"
                         Height="38"
                         Margin="0,0,0,18"/>

                <!-- Passwords -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Contraseña"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="#666"/>
                        <PasswordBox x:Name="txtPassword"
                                     Height="38"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Confirmar"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="#666"/>
                        <PasswordBox x:Name="txtConfirmPassword"
                                     Height="38"/>
                    </StackPanel>
                </Grid>

                <!-- Acción -->
                <Button Content="Completar Registro"
                        Style="{StaticResource ModernButton}"
                        Height="50"
                        FontSize="16"
                        Margin="0,30,0,5"
                        Click="Register_Click"/>

                <TextBlock Text="Al registrarte, aceptas nuestros términos."
                           FontSize="10"
                           Foreground="LightGray"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>

            </StackPanel>
        </Border>

    </Grid>
</Page>
