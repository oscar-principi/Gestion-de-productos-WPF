<Page x:Class="AMBL_WPF.Views.ABMLPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Gestión de Inventario"
      Background="{StaticResource BackgroundColor}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource PrimaryColor}" CornerRadius="0,30,30,0">
            <Grid Margin="20,40,20,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,50">
                    <Border Width="50" Height="50" Background="White" CornerRadius="25" Margin="0,0,0,15">
                        <TextBlock Text="📦" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Inventario" Foreground="White" FontSize="18" FontWeight="Black" HorizontalAlignment="Center" />
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <Button Content="🏠   Panel de Inicio" Style="{StaticResource MenuButton}" Click="MostrarPanel_Click"/>
                    <Button Content="📋   Listar Productos" Style="{StaticResource MenuButton}" Click="Listar_Click"/>
                    <Button Content="➕   Nuevo Producto" Style="{StaticResource MenuButton}" Click="Agregar_Click"/>
                </StackPanel>

                <Button Grid.Row="2" Content="🚪  Cerrar Sesión" Style="{StaticResource ModernButton}" Background="#3F3FE0" Height="45" Click="Salir_Click"/>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="Área de Gestión" FontSize="32" FontWeight="Black" Foreground="{StaticResource PrimaryColor}"/>
                <TextBlock Text="Control de existencias." Foreground="Gray" FontSize="15"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Border x:Name="PanelInicio" Background="White" CornerRadius="25" Visibility="Visible">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="50" Opacity="0.08" ShadowDepth="4" Color="Black"/>
                    </Border.Effect>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="🚀" FontSize="80" Margin="0,0,0,25" HorizontalAlignment="Center"/>
                        <TextBlock Text="¡Bienvenido al Sistema!" FontSize="32" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" HorizontalAlignment="Center"/>

                        <TextBlock Text="Desde aquí podrás gestionar tu inventario, añadir nuevos productos y controlar tus existencias de manera eficiente." 
                   Foreground="#7F8C8D" 
                   FontSize="16" 
                   Margin="0,15,0,0" 
                   TextWrapping="Wrap" 
                   TextAlignment="Center" 
                   MaxWidth="400"/>
                    </StackPanel>
                </Border>

                <Border x:Name="PanelListar" Background="White" CornerRadius="25" Visibility="Collapsed">
                    <Grid Margin="25">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Background="#F8F9FA" CornerRadius="12" BorderBrush="#E9ECEF" BorderThickness="1">
                                <StackPanel Orientation="Horizontal" Margin="15,0">
                                    <TextBlock Text="🔍" VerticalAlignment="Center" Foreground="Gray" Margin="0,0,10,0"/>
                                    <Grid VerticalAlignment="Center">
                                        <TextBox x:Name="txtBuscar" Width="300" Background="Transparent" BorderThickness="0" Height="40" VerticalContentAlignment="Center" TextChanged="txtBuscar_TextChanged"/>
                                        <TextBlock x:Name="lblPlaceholder" Text="Buscar producto..." Foreground="LightGray" IsHitTestVisible="False" VerticalAlignment="Center"
                                                   Visibility="{Binding Text.IsEmpty, ElementName=txtBuscar, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            <Button Grid.Column="1" Content="Limpiar" Click="LimpiarBusqueda_Click" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryColor}" Margin="10,0,0,0" Cursor="Hand"/>
                        </Grid>

                        <DataGrid x:Name="dgProductos" 
          Grid.Row="1" 
          AutoGenerateColumns="False" 
          BorderThickness="0" 
          CanUserAddRows="False"
          IsReadOnly="True"
          RowHeight="50"
          VerticalContentAlignment="Center">

                            <DataGrid.Resources>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                                    <ContentPresenter VerticalAlignment="Center" Margin="10,0"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="70"/>
                                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                                <DataGridTextColumn Header="Precio" Binding="{Binding Precio}" Width="100"/>
                                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="80"/>

                                <DataGridTemplateColumn Header="Acciones" Width="110">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <Button Content="✏️" 
                                Style="{StaticResource MenuButton}" 
                                Foreground="{StaticResource PrimaryColor}" 
                                Click="Editar_Click"
                                Margin="0,0,5,0"/>
                                                <Button Content="🗑️" 
                                Style="{StaticResource MenuButton}" 
                                Foreground="{StaticResource DangerColor}" 
                                Click="Eliminar_Click"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <Border x:Name="PanelAgregar" Background="White" CornerRadius="25" Visibility="Collapsed">
                    <StackPanel Margin="50,30" MaxWidth="450" HorizontalAlignment="Left">
                        <TextBlock x:Name="TituloFormulario" Text="Nuevo Producto" FontSize="24" FontWeight="Bold" Margin="0,0,0,25" Foreground="{StaticResource PrimaryColor}"/>
                        <TextBlock Text="Nombre" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtNombre" Margin="0,0,0,15"/>
                        <UniformGrid Columns="2">
                            <StackPanel Margin="0,0,10,0">
                                <TextBlock Text="Precio ($)" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtPrecio"/>
                            </StackPanel>
                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text="Stock" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtStock"/>
                            </StackPanel>
                        </UniformGrid>
                        <Button Content="💾 Guardar" Style="{StaticResource ModernButton}" Height="45" Margin="0,30,0,0" Click="Guardar_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>